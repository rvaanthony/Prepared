@{
    ViewData["Title"] = "Call Monitoring Dashboard";
    var googleMapsApiKey = ViewBag.GoogleMapsApiKey as string ?? string.Empty;
    var signalRHubUrl = ViewBag.SignalRHubUrl as string ?? "/hubs/transcript";
}

@section Scripts {
    <script>
        // Inject configuration for JavaScript
        window.googleMapsApiKey = '@Html.Raw(googleMapsApiKey)';
        window.signalRHubUrl = '@Html.Raw(signalRHubUrl)';
    </script>
}

<div class="container-fluid px-4 py-3">
    <div class="alert alert-info alert-dismissible fade show mb-3" role="alert" style="border-left: 4px solid #0dcaf0;">
        <div class="d-flex align-items-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-info-circle me-2" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
            </svg>
            <div class="flex-grow-1">
                <strong>Demo Project</strong>
                <p class="mb-0 mt-1">This is a demo project and has no affiliation with Axon or Prepared. Built to showcase technical skills and capabilities.</p>
            </div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h4 mb-0 fw-bold">Call Monitoring Dashboard</h1>
                <button id="refreshCalls" class="btn btn-sm btn-outline-secondary">
                    ‚Üª Refresh
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Left Column: Calls List -->
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        üìû Active Calls
                    </h5>
                </div>
                <div class="card-body p-0" style="max-height: 600px; overflow-y: auto;">
                    <div id="callsList">
                        <div class="text-muted p-3">No active calls</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Center Column: Transcript & Summary -->
        <div class="col-md-5 mb-3">
            <!-- Transcript Panel -->
            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        üí¨ Live Transcript
                    </h5>
                </div>
                <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                    <div id="transcriptContainer">
                        <div class="text-muted">Waiting for call transcript...</div>
                    </div>
                </div>
            </div>

            <!-- Summary Panel -->
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        üìÑ Summary & Key Findings
                    </h5>
                </div>
                <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                    <div id="summaryContainer">
                        <div class="text-muted">Summary will appear here when available...</div>
                    </div>
                </div>
            </div>

            <!-- Location Display -->
            <div class="card mt-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        üìç Extracted Location
                    </h5>
                </div>
                <div class="card-body">
                    <div id="locationDisplay">
                        <div class="text-muted">Location will appear here when extracted...</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Map -->
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        üó∫Ô∏è Map View
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div id="map" style="width: 100%; height: 600px; min-height: 600px;"></div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12 text-center">
            <small class="text-muted">
                <a asp-controller="Home" asp-action="Terms" class="text-decoration-none">Terms of Use</a>
            </small>
        </div>
    </div>
</div>

<style>
    .transcript-content {
        font-family: 'Courier New', monospace;
        font-size: 0.95rem;
        line-height: 1.6;
        white-space: pre-wrap;
        word-wrap: break-word;
    }

    .summary-content {
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .summary-content ul {
        padding-left: 1.5rem;
    }

    .summary-content li {
        margin-bottom: 0.5rem;
    }

    .location-info {
        font-size: 0.95rem;
    }

    .list-group-item {
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .list-group-item:hover {
        background-color: #f8f9fa;
    }

    .list-group-item.active {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    #map {
        border-radius: 0 0 0.375rem 0.375rem;
    }

    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .card-header {
        font-weight: 600;
    }
</style>

